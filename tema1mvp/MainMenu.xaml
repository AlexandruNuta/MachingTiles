<Window x:Class="tema1mvp.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tema1mvp"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800">
    <Grid>
        <Menu>
            <MenuItem Header="File" Click="MenuItem_Click">
                <MenuItem Header="New Game" Click="NewGame_Click"/>
                <MenuItem Header="Open Game" Click="OpenGame_Click"/>
                <MenuItem Header="Save Game" Click="SaveGame_Click"/>
                <MenuItem Header="Statistics" Click="Statistics_Click"/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Options">
                <MenuItem Header="Standard" Click="Standard_Click"/>
                <MenuItem Header="Custom" Click="Custom_Click"/>
            </MenuItem>
            <MenuItem Header="Help" Click="MenuItem_Click">
                <MenuItem Header="About" Click="About_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
